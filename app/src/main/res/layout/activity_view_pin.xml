<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_pin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="uw.virtualpin.Activities.ViewPinActivity">

    <fragment
        android:name="uw.virtualpin.Fragments.NavigationFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </fragment>

    <TextView
        android:textSize="14dp"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Created By: "
        android:id="@+id/creatorTextView"/>

    <TextView
        android:textSize="14dp"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Created: "
        android:id="@+id/dateTextView"/>

    <TextView
        android:textSize="14dp"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:text="Location: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/locationTextView"/>

    <TextView
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message: "/>

    <TextView
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/messageTextView" />

    <ImageView
        android:id="@+id/imageViewView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/navigation_header_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="80dp"
        android:gravity="bottom|center">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/thumbs_up_icon"
            android:id="@+id/upvoteView"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/thumbs_down_icon"
            android:id="@+id/downvoteView"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/heart_favorite_icon"
            android:id="@+id/favoriteView"/>
    </LinearLayout>

</LinearLayout>
