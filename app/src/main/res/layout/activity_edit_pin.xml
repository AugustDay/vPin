<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/test2"
    tools:context="uw.virtualpin.Activities.EditPinActivity">

    <fragment
        android:name="uw.virtualpin.Fragments.NavigationFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </fragment>

    <TextView
        android:textSize="14dp"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/creatorTextEdit"/>

    <TextView
        android:textSize="14dp"
        android:paddingBottom="18dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/locationTextEdit"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message: "/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textAutoCorrect|textCapSentences|textMultiLine"
        android:id="@+id/messageTextEdit"/>

    <ImageView
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:id="@+id/imageViewEdit"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom">

        <Button
            android:background="#00ff00"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/updateButton"
            android:textAlignment="center"
            android:text="Update"/>

        <Button
            android:background="#cc3300"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/deleteButton"
            android:textAlignment="center"
            android:text="Delete"/>
    </LinearLayout>

</LinearLayout>
